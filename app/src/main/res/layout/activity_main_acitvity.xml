<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainAcitvity"
    android:background="#00FFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What machine is generally considered to be the first general-purpose computer?"
        android:id="@+id/flashcard_quest"
        android:textSize="40sp"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:gravity="center"
        android:background="#ffe7ffc1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ENIAC"
        android:id="@+id/flascard_answer"
        android:textAlignment="center"
        android:textSize="40sp"
        android:height="200dp"
        android:visibility="invisible"
        android:background="#ffff8486"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/flashcard_quest"
        android:textColor="#ffffffff" />
</RelativeLayout>
